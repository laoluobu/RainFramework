<rf:AutoVMPage
    x:Class="Demo.Pages.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:eunm="clr-namespace:Demo.Enum"
    xmlns:local="clr-namespace:Demo.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rf="https://rainwpf.github.io/rainwpf"
    xmlns:vm="clr-namespace:Demo.ViewModel"
    Title="Home"
    d:Background="White"
    d:DataContext="{d:DesignInstance Type={x:Type vm:HomeVM}}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:TypeArguments="vm:HomeVM"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock Text="Home" />
        <ComboBox ItemsSource="{rf:EnumBinding {x:Type eunm:Language}}" SelectedValue="{Binding Language}" />
        <rf:PropertyViewer Width="200" FontSize="20" />

    </StackPanel>
</rf:AutoVMPage>
